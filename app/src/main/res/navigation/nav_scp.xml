<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/fragment_scp">

    <fragment
            android:id="@+id/fragment_scp"
            android:name="com.defate.mac.androidcommondemo.samples.ScpFragment"
            android:label="@string/fragment_scp"
            tools:layout="@layout/fragment_scp" >
        <action android:id="@+id/action_fragment_scp_to_scpListFragment" app:destination="@id/scpListFragment"
                app:enterAnim="@anim/nav_default_enter_anim"/>
    </fragment>
    <fragment android:id="@+id/scpDetailFragment" android:name="com.defate.mac.androidcommondemo.ScpDetailFragment"
              android:label="fragment_scp_detail" tools:layout="@layout/fragment_scp_detail"/>
    <fragment android:id="@+id/scpListFragment" android:name="com.defate.mac.androidcommondemo.ScpListFragment"
              android:label="fragment_scp_list" tools:layout="@layout/fragment_scp_list">
        <action android:id="@+id/action_scpListFragment_to_scpDetailFragment" app:destination="@id/scpDetailFragment"
                app:enterAnim="@anim/nav_default_enter_anim"/>
    </fragment>

</navigation>